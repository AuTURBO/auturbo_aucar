    <!-- <plugin name="aucar_controller" filename="libgazebo_ros_diff_drive.so"> -->
      <plugin name="aucar_controller" filename="libaucar_drive.so">
      <!-- <robotNamespace>aucar1</robotNamespace> -->
      <commandVelocityTopic>cmd_vel</commandVelocityTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_footprint</robotBaseFrame>
      <baseLinkName>base_link</baseLinkName>
      <steerLeftFrontJoint>steer_left_front_joint</steerLeftFrontJoint>
      <steerRightFrontJoint>steer_right_front_joint</steerRightFrontJoint>
      <steerLeftRearJoint>steer_left_rear_joint</steerLeftRearJoint>
      <steerRightRearJoint>steer_right_rear_joint</steerRightRearJoint>
      <wheelLeftFrontJoint>wheel_left_front_joint</wheelLeftFrontJoint>
      <wheelRightFrontJoint>wheel_right_front_joint</wheelRightFrontJoint>
      <wheelLeftRearJoint>wheel_left_rear_joint</wheelLeftRearJoint>
      <wheelRightRearJoint>wheel_right_rear_joint</wheelRightRearJoint>
      <doesPublishOdometry>true</doesPublishOdometry>
      <doesPublishWheelTF>false</doesPublishWheelTF>
      <doesPublishWheelJointState>true</doesPublishWheelJointState>
      <updateRate>30</updateRate>
      <wheelSeparation>0.500</wheelSeparation>
      <wheelDiameter>0.196</wheelDiameter>
      <wheelAcceleration>100</wheelAcceleration>
      <wheelTorque>20</wheelTorque>
    </plugin>
  </gazebo>

